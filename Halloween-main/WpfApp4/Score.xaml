<Window x:Class="WpfApp4.Score"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp4"  Icon="/images/icon.ico" WindowState="Maximized" 
        mc:Ignorable="d"
        Title="Score" Height="450" Width="800">
    <Grid>
        <Grid.Background>
            <ImageBrush ImageSource="/Images/hatter.png" Stretch="UniformToFill"/>
        </Grid.Background>
        <StackPanel Width="700"  VerticalAlignment="Center">
            <Image Source="/Images/cheat_tokfej.png" Stretch="UniformToFill" Width="100" RenderOptions.BitmapScalingMode="NearestNeighbor" />
            <Border CornerRadius="15" BorderThickness="5" BorderBrush="Yellow" Background="OrangeRed">
                <StackPanel>
                    <TextBlock Text="Eredmények" FontFamily="monocraft" FontSize="20" Foreground="Yellow" HorizontalAlignment="Center"/>
                    <ScrollViewer Padding="20" Margin="10" Height="200" VerticalScrollBarVisibility="Hidden">
                        <StackPanel Name="tarolo">
                            <local:ScoreRowUC/>
                            <local:ScoreRowUC/>
                            <local:ScoreRowUC/>
                            <local:ScoreRowUC/>
                            <local:ScoreRowUC/>
                            <local:ScoreRowUC/>
                            <local:ScoreRowUC/>
                            <local:ScoreRowUC/>
                        </StackPanel>

                        
                    </ScrollViewer>
                </StackPanel>
            </Border>
        </StackPanel>
    </Grid>
</Window>
