<Window x:Class="WpfApp4.StartWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp4" WindowState="Maximized"  Icon="/images/icon.ico"
        mc:Ignorable="d"
        Title="StartWindow" Height="450" Width="800">
    <Grid>
        <Grid.Background>
            <ImageBrush ImageSource="/Images/hatter.png" Stretch="UniformToFill"/>
        </Grid.Background>
        <StackPanel Width="300" VerticalAlignment="Center">
            <TextBox FontSize="25" Padding="10" Margin="5" FontFamily="monocraft"/>
            <Button Name="belepes" Background="OrangeRed" FontFamily="monocraft" FontSize="20" Foreground="Yellow" BorderBrush="Yellow" BorderThickness="4" Padding="10" Margin="0 10 0 10" FontWeight="Black" Content="Belépés"/>
        </StackPanel>
    </Grid>
</Window>
