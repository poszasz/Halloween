<Window x:Class="WpfApp4.Game"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp4"  Icon="/images/icon.ico" WindowState="Maximized" 
        mc:Ignorable="d"
        Title="Game" Height="450" Width="800">
    <Grid Margin="2">
        <Grid.Background>
            <ImageBrush ImageSource="/Images/hatter.png" Stretch="UniformToFill"/>
        </Grid.Background>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition />
        </Grid.RowDefinitions>
        <TextBlock Grid.Row="0" Grid.Column="0" Text="60 mp" FontFamily="monocraft" FontSize="20" Foreground="Yellow"/>
        <TextBlock Grid.Row="0" Grid.Column="2" Text="Elemér" FontFamily="monocraft" FontSize="20" Foreground="Yellow" HorizontalAlignment="Center"/>
        <StackPanel Grid.Row="0" Grid.Column="3" Grid.ColumnSpan="2">
            <TextBlock Text="12 pont" FontFamily="monocraft" FontSize="20" Foreground="Yellow" TextAlignment="Right"/>
            <TextBlock Text="Rekord: 23 pont" FontFamily="monocraft" FontSize="20" Foreground="Yellow" TextAlignment="Right"/>
        </StackPanel>
        <Image Grid.Column="0" Grid.Row="1" VerticalAlignment="Bottom" Margin="0 0 0 50" Source="/Images/sima_tokfej.png" RenderOptions.BitmapScalingMode="NearestNeighbor"/>
        <Image Grid.Column="1" Grid.Row="1" VerticalAlignment="Bottom" Margin="0 0 0 50" Source="/Images/sima_tokfej.png" RenderOptions.BitmapScalingMode="NearestNeighbor"/>
        <Image Grid.Column="2" Grid.Row="1" VerticalAlignment="Bottom" Margin="0 0 0 50" Source="/Images/2_nyitott_tokfej.png" RenderOptions.BitmapScalingMode="NearestNeighbor"/>
        <Image Grid.Column="3" Grid.Row="1" VerticalAlignment="Bottom" Margin="0 0 0 50" Source="/Images/sima_tokfej.png" RenderOptions.BitmapScalingMode="NearestNeighbor"/>
        <Image Grid.Column="4" Grid.Row="1" VerticalAlignment="Bottom" Margin="0 0 0 50" Source="/Images/sima_tokfej.png" RenderOptions.BitmapScalingMode="NearestNeighbor"/>
    </Grid>
</Window>
